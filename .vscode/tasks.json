{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "echo value",
      "command": "echo ${config:FLASH_COM_NUM}",
      "args": [],
      "options": {
        "cwd": "${workspaceFolder}"
      }
    },
    {
      "type": "shell",
      "label": "menuconfig",
      "command": "start ./menuconfig.bat ",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "problemMatcher": [
        "$msCompile"
      ]
    },
    {
      "type": "shell",
      "label": "build",
      "command": " python ./build.py build",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "label": "rebuild",
      "command": "python ./build.py build",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build",
      "dependsOn": [
        "clean"
      ]
    },
    {
      "type": "shell",
      "label": "flash",
      "command": "python ./build.py -p ${config:FLASH_COM_NUM} flash ",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "flash monitor",
      "command": "python ./build.py -p ${config:FLASH_COM_NUM} flash monitor",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "erase_flash",
      "command": "python ./build.py erase_flash -p ${config:FLASH_COM_NUM} ",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "clean",
      "command": "python ./build.py clean",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build"
    },
    {
      "type": "shell",
      "label": "idf.py build flash",
      "command": "python ./build.py build flash -p ${config:FLASH_COM_NUM} -b ${config:FLASH_COM_BAUD}",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build",
      "runOptions": {}
    },
    // 使用putty终端启动串口监视，这样能够兼容console组件
    {
      "type": "shell",
      "label": "idf.py build flash putty",
      "command": "putty -serial ${config:MONITOR_COM_NUM} -sercfg ${config:MONITOR_COM_BAUD},8,n,1,N",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build",
      "dependsOn": [
        "idf.py build flash"
      ]
    },
    // 使用putty终端启动串口监视，这样能够兼容console组件
    {
      "type": "shell",
      "label": "putty",
      "command": "putty -serial ${config:MONITOR_COM_NUM} -sercfg ${config:MONITOR_COM_BAUD},8,n,1,N",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build",
    },
    {
      "type": "shell",
      "label": "help",
      "command": "python ./build.py --help",
      "args": [],
      "options": {
        "cwd": "${config:PROJECT_PATH}"
      },
      "group": "build"
    }
  ]
}

